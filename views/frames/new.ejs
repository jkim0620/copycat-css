<!DOCTYPE html>
<html>
  <head>
    <%- include ../partials/head.ejs %>
  </head>
  <body>

    <div class="container-fluid">
      <div class="row editor-container">

        <!-- iframe preview section -->
        <div class="col-sm-8 iframe-container">

          <!-- nav menu -->
          <a href="/"><i class="home-btn fa fa-2x fa-code" aria-hidden="true"></i></a>
          <button id="exportBtn" class="export-btn hvr-shutter-out-horizontal" type="button" name="button"><i class="fa fa-download" aria-hidden="true"></i> EXPORT</button>
          <button id="modalBtn" class="modal-btn hvr-shutter-out-horizontal" type="button" name="button"><i class="fa fa-sticky-note-o" aria-hidden="true"></i> POST</button>

          <!-- modal for save -->
          <div id="modal" class="modal-wrapper">
            <div class="modal-container">
              <button id="closeBtn" class="close-btn">X</button>
              <h2>Ready to post?<span id="cursor">|</span></h2>
              <form type="submit" id="form">
                <input id="title" class="title-input" type="text" placeholder="Enter Title" />
                <button id="saveBtn" class="save-btn" type="button" name="button">SAVE</button>
              </form>
            </div>
          </div>

          <!-- iframe -->
          <div class="iframe-bg">
            <iframe id="preview" class="iframe-live"></iframe>
          </div>
        </div>


        <!-- editor section -->
        <div class="col-sm-4">
          <div id="html-editor" class="editor editor-html"></div>
          <div id="css-editor" class="editor editor-css"></div>
        </div>

      </div> <!-- /row -->
    </div> <!-- /container-fluid -->

    <script src="/js/new.js"></script>

  </body>
</html>
